{
    "name": "raydoc-context",
    "displayName": "raydoc-context",
    "description": "Debugging context at your fingertips",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.97.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onLanguage:*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "raydoc-context.copyContextAtCursor",
                "title": "Copy Context at Cursor"
            }
        ],
        "keybindings": [
            {
                "command": "raydoc-context.copyContextAtCursor",
                "key": "ctrl+shift+c",
                "mac": "cmd+shift+c",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Raydoc Settings",
            "properties": {
                "raydoc-context.includeComments": {
                    "type": "boolean",
                    "default": false,
                    "description": "Include comments in the copied context"
                },
                "raydoc-context.depth": {
                    "type": "number",
                    "default": 2,
                    "description": "Depth of the context to copy"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.97.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^8.22.0",
        "@typescript-eslint/parser": "^8.22.0",
        "eslint": "^9.19.0",
        "typescript": "^5.7.3",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1"
    }
}